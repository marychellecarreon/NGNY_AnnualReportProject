<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Header colour</th>
      <th>Footer colour</th>
      <th>Footer date</th>
      <th>Footer company</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.header_colour %></td>
        <td><%= report.footer_colour %></td>
        <td><%= report.footer_date %></td>
        <td><%= report.footer_company %></td>
        <td><%= report.user_id %></td>
        <td><%= link_to 'Show', user_report_path(@user, report) %></td>
        <td><%= link_to 'Edit', edit_user_report_path(@user, report) %></td>
        <td><%= link_to 'Destroy', user_report_path(@user, report), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

